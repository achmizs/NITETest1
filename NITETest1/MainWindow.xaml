<Window x:Class="NITETest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Title="MainWindow" Height="Auto" Width="Auto" Loaded="Window_Loaded"
        Cursor="None">
    <Canvas x:Name="mainCanvas">
        <Image Height="Auto" Width="Auto" Name="background" Stretch="Fill" StretchDirection="Both" Source="images/windows_background_1920_1080.jpg" />
<!--
        <Image Height="480" HorizontalAlignment="Left" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="640" Grid.ColumnSpan="2" />
-->
        <Border x:Name="leftTarget" Canvas.Top="0" Canvas.Left="300" Background="Crimson" Width="50" Height="1080" />
        <Border x:Name="rightTarget" Canvas.Top="0" Canvas.Right="300" Background="Crimson" Width="50" Height="1080" />
<!--
        <Ellipse x:Name="cursorOutline" Stroke="White" StrokeThickness="10" Canvas.Left="99" Canvas.Top="129" Width="82" Height="82"></Ellipse>
        <Ellipse x:Name="cursor" Stroke="Blue" StrokeThickness="9" Canvas.Left="100" Canvas.Top="130" Width="80" Height="80"></Ellipse>
-->
        <Rectangle x:Name="verticalCursor" Canvas.Top="0" Canvas.Left="300" Stroke="White" Fill="White" StrokeThickness="2" Width="11" Height="1080" />
    </Canvas>
</Window>
